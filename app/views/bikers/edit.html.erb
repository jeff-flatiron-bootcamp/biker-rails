
<% if (@biker.errors.any?) %>
<ul>    
     <% @biker.errors.full_messages.each do |msg| %>
    <span class="error_text">
    <li> <%= msg %></li>
     </span>
    <% end %>
</ul>
<% end %>

<p><%= image_tag("biking-image.jpg",width: '400px') %>

<h2>Edit Your Bike Account</h2>
<%= form_for @biker do |f| %>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %><br><br>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %><br><br>
    <%= f.label :user_name %><br>
    <%= f.text_field :user_name %><br><br>
    <%= f.label :biography %><br>
    <%= f.text_area :biography %><br>
    <%= f.submit %>
<% end %>
</p>