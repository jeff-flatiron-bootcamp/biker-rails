<h1>New Trip for <%= session[:first_name] %> </h1>

<%= form_for @trip do |f| %>
    <%= f.hidden_field :biker_id, value: session[:user_id] %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :bike_id %><br>
    <%= f.collection_select :bike_id,  @bikes, :id, :bike_name %><br>
    <%= f.label :start_city %><br>
    <%= f.text_field :start_city %><br>
    <%= f.label :dest_city %><br>
    <%= f.text_field :dest_city %><br>
    <%= f.label :distance_miles %><br>
    <%= f.number_field :distance_miles, step: 0.1 %><br>
    <%= f.label :start_date %><br>
    <%= f.datetime_select  :start_date %><br>
    <%= f.label :end_date %><br>
    <%= f.datetime_select :end_date %><br><br>

    <%= f.label :images %>
    <%= f.file_field :images, multiple: true %>
    <br><br>
    
    <%= f.submit %>
<% end %>